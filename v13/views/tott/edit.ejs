



<% include ../partials/header %>

        <h1 style="text-align: center">Edit <%= tott.name %></h1>

        <div style="width: 60%; margin: 45px auto;">
            <form action="/talkOfTheTown/<%= tott._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="tott[name]" value="<%= tott.class %>">
                </div>
                <div class="form-group">
                    <input class="form-control"  type="text" name="tott[rumor]" value="<%= tott.rumor %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="tott[Fashionableness]" value="<%= tott.Populirity %>" step="1" min="0" max="1" required>
                </div>
                <div class="form-group">
                    <input class="form-control"  type="text" name="tott[image]" value="<%= tott.image %>">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control"  type="text" name="tott[location]" id="location" value="<%= tott.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-warning btn-block" > Submit </button>
                </div>
            </form>
            <a href="/talkOfTheTown/<%= tott._id %>"> Go back </a>
       </div>  


<% include ../partials/footer %>
